<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <ScrollView android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listViewInventory"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="70dp"
                android:id="@+id/textView2"
                android:background="@color/white"
                android:layout_marginTop="199dp"
                android:layout_alignTop="@+id/listViewInventory"
                android:layout_alignLeft="@+id/listViewInventory"
                android:layout_alignStart="@+id/listViewInventory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Add items"
                android:id="@+id/textView3"
                android:textSize="15dp"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginBottom="3dp" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="70dp"
                android:id="@+id/textView4"
                android:background="@color/white"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignRight="@+id/listViewInventory"
                android:layout_alignEnd="@+id/listViewInventory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Add full containers"
                android:id="@+id/textView5"
                android:textSize="15dp"
                android:layout_above="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginBottom="3dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="In one cont."
                android:id="@+id/textView6"
                android:textSize="17dp"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_above="@+id/buttonAddItem" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cont."
                android:id="@+id/textView7"
                android:textSize="17dp"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignEnd="@+id/textView4" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/buttonAddItem"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:background="#3F51B5"
                android:textColor="@color/white"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/buttonAddContainer"
                android:background="#3F51B5"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/buttonAddItem"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextItemsInContainer"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:background="@android:color/transparent"
                android:hint="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text=""
                android:imeOptions="actionDone"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextContainers"
                android:background="@android:color/transparent"
                android:hint="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_toLeftOf="@+id/textView7"
                android:layout_toStartOf="@+id/textView7"
                android:layout_alignTop="@+id/textView4"
                android:layout_above="@+id/buttonAddItem"
                android:text=""
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="70dp"
                android:id="@+id/textView8"
                android:background="@color/white"
                android:layout_marginTop="44dp"
                android:layout_below="@+id/buttonAddItem"
                android:layout_alignLeft="@+id/buttonAddItem"
                android:layout_alignStart="@+id/buttonAddItem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Substract items"
                android:id="@+id/textView9"
                android:textSize="15dp"
                android:layout_below="@+id/buttonAddItem"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginTop="18dp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:id="@+id/textView10"
                android:background="@color/white"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignLeft="@+id/buttonAddContainer"
                android:layout_alignStart="@+id/buttonAddContainer"
                android:layout_alignRight="@+id/buttonAddContainer"
                android:layout_alignEnd="@+id/buttonAddContainer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Substract full cont."
                android:id="@+id/textView11"
                android:textSize="15dp"
                android:layout_alignTop="@+id/textView9"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextItemsInContainerSubstract"
                android:background="@android:color/transparent"
                android:hint="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text=""
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignRight="@+id/editTextItemsInContainer"
                android:layout_alignEnd="@+id/editTextItemsInContainer"
                android:imeOptions="actionDone"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextContainersSubstract"
                android:background="@android:color/transparent"
                android:hint="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text=""
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_toLeftOf="@+id/textView7"
                android:layout_toStartOf="@+id/textView7"
                android:layout_alignTop="@+id/textView10"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="From cont."
                android:id="@+id/textView12"
                android:textSize="17dp"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cont."
                android:id="@+id/textView13"
                android:textSize="17dp"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignRight="@+id/textView10"
                android:layout_alignEnd="@+id/textView10" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBSTRACT"
                android:id="@+id/buttonSubstractItem"
                android:layout_marginTop="11dp"
                android:background="#3F51B5"
                android:textColor="@color/white"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBSTRACT"
                android:id="@+id/buttonSubstractContainer"
                android:background="#3F51B5"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/buttonSubstractItem"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_alignRight="@+id/textView10"
                android:layout_alignEnd="@+id/textView10" />

            <View
                android:id="@+id/seperator"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#c0c0c0"
                android:layout_below="@+id/buttonSubstractItem"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="70dp"
                android:id="@+id/textView14"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/seperator"
                android:layout_alignLeft="@+id/buttonSubstractItem"
                android:layout_alignStart="@+id/buttonSubstractItem" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextEmptyContainerAdd"
                android:background="@android:color/transparent"
                android:hint="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text=""
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignTop="@+id/textView14"
                android:layout_alignRight="@+id/editTextItemsInContainer"
                android:layout_alignEnd="@+id/editTextItemsInContainer"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Empty cont."
                android:id="@+id/textView16"
                android:textSize="17dp"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignRight="@+id/textView14"
                android:layout_alignEnd="@+id/textView14" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/buttonAddEmptyContainer"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="30dp"
                android:background="#3F51B5"
                android:textColor="@color/white"
                android:layout_below="@+id/textView14"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignStart="@+id/textView14"
                android:layout_alignRight="@+id/textView14"
                android:layout_alignEnd="@+id/textView14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" "
                android:id="@+id/textView17"
                android:textSize="15dp"
                android:layout_below="@+id/buttonAddEmptyContainer" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="70dp"
                android:id="@+id/textView18"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/seperator"
                android:layout_alignLeft="@+id/buttonSubstractContainer"
                android:layout_alignStart="@+id/buttonSubstractContainer" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextEmptyContainerSubstract"
                android:background="@android:color/transparent"
                android:hint="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text=""
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignTop="@+id/textView18"
                android:layout_alignRight="@+id/editTextContainersSubstract"
                android:layout_alignEnd="@+id/editTextContainersSubstract"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Empty cont."
                android:id="@+id/textView20"
                android:textSize="17dp"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignRight="@+id/textView18"
                android:layout_alignEnd="@+id/textView18" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBSTRACT"
                android:id="@+id/buttonSubstractEmptyContainer"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="20dp"
                android:background="#3F51B5"
                android:textColor="@color/white"
                android:layout_below="@+id/textView18"
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18"
                android:layout_alignRight="@+id/textView18"
                android:layout_alignEnd="@+id/textView18" />

        </RelativeLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        tools:context=".MyActivity"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/toolbar"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Storage place advanced"
            android:id="@+id/titleadvanced"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/buttonSubmitInventory"
            android:textSize="17sp"
            android:background="@null"
            android:textColor="@color/white"
            android:text="SUBMIT"
            android:clickable="true"
            android:contextClickable="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elevation="10dp" />

    </android.support.v7.widget.Toolbar>

</RelativeLayout>