<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="${relativePackage}.${activityClass}">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        tools:context=".MyActivity"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/toolbar">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Export Excel Report"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view2">

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/excelButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="9dp"
        android:text="Email Excel Report"
        android:drawableLeft="@drawable/excel"
        android:textSize="15sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/nota"
        android:layout_alignLeft="@+id/nota"
        android:layout_alignStart="@+id/nota"
        android:layout_alignRight="@+id/nota"
        android:layout_alignEnd="@+id/nota" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailReceiver1"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Mail Receiver 1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/nota"
        android:hint="Notes (optional)"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/emailReceiver2"
        android:layout_alignLeft="@+id/emailReceiver2"
        android:layout_alignStart="@+id/emailReceiver2"
        android:layout_alignRight="@+id/emailReceiver2"
        android:layout_alignEnd="@+id/emailReceiver2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailReceiver2"
        android:hint="Mail Receiver 2 (optional)"
        android:layout_below="@+id/emailReceiver1"
        android:layout_alignLeft="@+id/emailReceiver1"
        android:layout_alignStart="@+id/emailReceiver1"
        android:layout_alignRight="@+id/emailReceiver1"
        android:layout_alignEnd="@+id/emailReceiver1" />
    />

</RelativeLayout>