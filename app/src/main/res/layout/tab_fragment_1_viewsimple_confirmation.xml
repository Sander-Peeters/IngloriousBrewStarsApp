<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        tools:context=".MyActivity"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/toolbar">
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/buttonCloseConfirmation"
        android:textSize="17sp"
        android:background="@null"
        android:textColor="@color/white"
        android:text="CLOSE"
        android:clickable="true"
        android:contextClickable="true"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inventory added successfully."
        android:id="@+id/confirmation"
        android:textColor="@color/gray_dark"
        android:layout_below="@+id/toolbar"
        android:layout_alignLeft="@+id/listViewInventory"
        android:layout_alignStart="@+id/listViewInventory"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Storage place simple"
        android:id="@+id/titleadvancedconfirmation"
        android:textColor="@color/white"
        android:layout_marginBottom="17dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignLeft="@+id/listViewInventory"
        android:layout_alignStart="@+id/listViewInventory" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewInventory"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="110dp"
        android:background="@color/white"/>

</RelativeLayout>